@page :first {
    size: a4 portrait;
    margin: 125mm 10mm 25mm 10mm;
    background-color:white;
    @top-center {
	font-size: 40px;
    	font-family: "Roboto","Helvetica Neue",Helvetica,Arial,sans-serif;
	color: #e72464;
  	content: "HackingLife";
    }

    @bottom-left {
        content: " ";
    }
    @top-left { 
	content: " ";
    }
    @bottom-right {
        content: " ";
    }
}
@page {
    size: a4 portrait;
    margin: 25mm 10mm 25mm 10mm;
    counter-increment: page;
    font-family: "Roboto","Helvetica Neue",Helvetica,Arial,sans-serif;
    white-space: pre;
    color: white;
    background-color:#e72464;
    @bottom-left {
        content: '2023 @amandaguglieri';
	font-size: 12px;
    }
    @top-center {
    	h1 { 
		bookmark-label: content(text);
		bookmark-level: 1;
    	}
    }
    @top-left { 
	font-size: 16px;
	content: "HackingLife";
    }
    @bottom-right {
        content: 'Page ' counter(page);
	font-size: 12px;
    }
}


